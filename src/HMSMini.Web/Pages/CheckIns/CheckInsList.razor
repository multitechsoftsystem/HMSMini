@page "/checkins"
@inject IApiClientService ApiClient
@inject NavigationManager Navigation
@using HMSMini.Web.Services
@using HMSMini.Web.Models
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Check-Ins - HMS Mini</PageTitle>

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Check-Ins</h2>
        <button class="btn btn-primary" @onclick="ShowCreateModal">
            <i class="bi bi-plus-circle"></i> New Check-In
        </button>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Active Check-Ins</h5>
        </div>
        <div class="card-body">
            @if (loading)
            {
                <div class="text-center">
                    <div class="spinner-border"></div>
                </div>
            }
            else if (checkIns.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Room</th>
                                <th>Check-In Date</th>
                                <th>Check-Out Date</th>
                                <th>Guests</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var checkIn in checkIns)
                            {
                                <tr>
                                    <td>@checkIn.RoomNumber</td>
                                    <td>@checkIn.CheckInDate.ToShortDateString()</td>
                                    <td>@checkIn.CheckOutDate.ToShortDateString()</td>
                                    <td>@checkIn.Pax</td>
                                    <td>
                                        <span class="badge bg-@(checkIn.Status == 0 ? "success" : "secondary")">
                                            @checkIn.StatusName
                                        </span>
                                    </td>
                                    <td>
                                        @if (checkIn.Status == 0)
                                        {
                                            <button class="btn btn-sm btn-info me-1" @onclick="() => ManageGuests(checkIn.Id)">
                                                <i class="bi bi-person-badge"></i> Guests
                                            </button>
                                            <button class="btn btn-sm btn-warning" @onclick="() => CheckOut(checkIn.Id)">
                                                Check Out
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No active check-ins</p>
            }
        </div>
    </div>
</div>

<!-- Create Check-In Modal -->
@if (showCreateModal)
{
    <div class="modal-backdrop show"></div>
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">New Check-In</h5>
                    <button type="button" class="btn-close" @onclick="HideCreateModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="newCheckIn" OnValidSubmit="CreateCheckIn">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Room Number (Available Rooms Only)</label>
                                <InputSelect @bind-Value="newCheckIn.RoomNumber" class="form-control">
                                    <option value="">-- Select Room --</option>
                                    @foreach (var room in availableRooms)
                                    {
                                        <option value="@room.RoomNumber">@room.RoomNumber - @room.RoomTypeName</option>
                                    }
                                </InputSelect>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Check-Out Date</label>
                                <InputDate @bind-Value="newCheckIn.CheckOutDate" class="form-control" />
                            </div>
                        </div>

                        <h6 class="mt-3">Guest Information</h6>
                        @for (int i = 0; i < newCheckIn.Guests.Count; i++)
                        {
                            var index = i;
                            <div class="border rounded p-3 mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <strong>Guest @(index + 1)</strong>
                                    @if (newCheckIn.Guests.Count > 1)
                                    {
                                        <button type="button" class="btn btn-sm btn-danger"
                                                @onclick="() => RemoveGuest(index)">Remove</button>
                                    }
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-2">
                                        <label>Name</label>
                                        <InputText @bind-Value="newCheckIn.Guests[index].GuestName" class="form-control" />
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <label>Mobile</label>
                                        <InputText @bind-Value="newCheckIn.Guests[index].MobileNo" class="form-control" />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-2">
                                        <label>City</label>
                                        <InputText @bind-Value="newCheckIn.Guests[index].City" class="form-control" />
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <label>PAN/Aadhar No</label>
                                        <InputText @bind-Value="newCheckIn.Guests[index].PanOrAadharNo" class="form-control" />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12 mb-2">
                                        <label><i class="bi bi-card-image"></i> ID Proof Documents (Optional)</label>
                                        <div class="border rounded p-2 bg-light">
                                            <small class="text-muted d-block mb-2">Upload ID proof after check-in is created</small>
                                            <div class="d-flex gap-2">
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-file-earmark-image"></i> Photo 1: Available after check-in
                                                </span>
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-file-earmark-image"></i> Photo 2: Available after check-in
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (newCheckIn.Guests.Count < 3)
                        {
                            <button type="button" class="btn btn-secondary btn-sm mb-3" @onclick="AddGuest">
                                <i class="bi bi-plus"></i> Add Guest
                            </button>
                        }

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="HideCreateModal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Create Check-In</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

<!-- Manage Guests Modal -->
@if (showGuestsModal)
{
    <div class="modal-backdrop show"></div>
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Manage Guests - Room @selectedCheckIn?.RoomNumber</h5>
                    <button type="button" class="btn-close" @onclick="HideGuestsModal"></button>
                </div>
                <div class="modal-body">
                    @if (loadingGuests)
                    {
                        <div class="text-center">
                            <div class="spinner-border"></div>
                        </div>
                    }
                    else if (managedGuests.Any())
                    {
                        @foreach (var guest in managedGuests)
                        {
                            <div class="card mb-3">
                                <div class="card-header">
                                    <strong>Guest @guest.GuestNumber: @guest.GuestName</strong>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <!-- Guest Information -->
                                        <div class="col-md-6">
                                            <h6>Guest Information</h6>
                                            <div class="mb-2">
                                                <label class="form-label">Name</label>
                                                <InputText @bind-Value="guest.GuestName" class="form-control form-control-sm" />
                                            </div>
                                            <div class="mb-2">
                                                <label class="form-label">Mobile</label>
                                                <InputText @bind-Value="guest.MobileNo" class="form-control form-control-sm" />
                                            </div>
                                            <div class="mb-2">
                                                <label class="form-label">City</label>
                                                <InputText @bind-Value="guest.City" class="form-control form-control-sm" />
                                            </div>
                                            <div class="mb-2">
                                                <label class="form-label">PAN/Aadhar No</label>
                                                <InputText @bind-Value="guest.PanOrAadharNo" class="form-control form-control-sm" />
                                            </div>
                                            <button class="btn btn-sm btn-primary" @onclick="() => UpdateGuest(guest)">
                                                <i class="bi bi-save"></i> Save Changes
                                            </button>
                                        </div>

                                        <!-- ID Proof Upload and OCR -->
                                        <div class="col-md-6">
                                            <h6>ID Proof Documents</h6>

                                            <!-- Photo 1 -->
                                            <div class="border rounded p-2 mb-2">
                                                <strong>Photo 1:</strong>
                                                @if (!string.IsNullOrEmpty(guest.Photo1Path))
                                                {
                                                    <span class="badge bg-success ms-2">Uploaded</span>
                                                }
                                                <div class="mt-2">
                                                    <InputFile OnChange="@(e => HandlePhotoUpload(e, guest.Id, 1))"
                                                               accept="image/*"
                                                               class="form-control form-control-sm mb-2" />
                                                    @if (!string.IsNullOrEmpty(guest.Photo1Path))
                                                    {
                                                        <button class="btn btn-sm btn-success" @onclick="() => ProcessOcr(guest, 1)">
                                                            <i class="bi bi-cpu"></i> Process OCR
                                                        </button>
                                                    }
                                                </div>
                                            </div>

                                            <!-- Photo 2 -->
                                            <div class="border rounded p-2 mb-2">
                                                <strong>Photo 2:</strong>
                                                @if (!string.IsNullOrEmpty(guest.Photo2Path))
                                                {
                                                    <span class="badge bg-success ms-2">Uploaded</span>
                                                }
                                                <div class="mt-2">
                                                    <InputFile OnChange="@(e => HandlePhotoUpload(e, guest.Id, 2))"
                                                               accept="image/*"
                                                               class="form-control form-control-sm mb-2" />
                                                    @if (!string.IsNullOrEmpty(guest.Photo2Path))
                                                    {
                                                        <button class="btn btn-sm btn-success" @onclick="() => ProcessOcr(guest, 2)">
                                                            <i class="bi bi-cpu"></i> Process OCR
                                                        </button>
                                                    }
                                                </div>
                                            </div>

                                            @if (uploadingGuests.Contains(guest.Id))
                                            {
                                                <div class="alert alert-info">
                                                    <i class="bi bi-upload"></i> Uploading...
                                                </div>
                                            }

                                            @if (processingOcrGuests.Contains(guest.Id))
                                            {
                                                <div class="alert alert-info">
                                                    <i class="bi bi-cpu"></i> Processing OCR...
                                                </div>
                                            }

                                            @if (ocrSuccessGuests.Contains(guest.Id))
                                            {
                                                <div class="alert alert-success">
                                                    <i class="bi bi-check-circle"></i> OCR completed! Information auto-filled above.
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideGuestsModal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<CheckInDto> checkIns = new();
    private CreateCheckInDto newCheckIn = new();
    private List<RoomDto> availableRooms = new();
    private bool loading = true;
    private bool showCreateModal = false;

    // Guest management
    private bool showGuestsModal = false;
    private bool loadingGuests = false;
    private CheckInDto? selectedCheckIn = null;
    private List<GuestDto> managedGuests = new();
    private HashSet<int> uploadingGuests = new();
    private HashSet<int> processingOcrGuests = new();
    private HashSet<int> ocrSuccessGuests = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadCheckIns();
    }

    private async Task LoadCheckIns()
    {
        loading = true;
        checkIns = await ApiClient.GetActiveCheckInsAsync();
        loading = false;
    }

    private async Task ShowCreateModal()
    {
        // Load available rooms
        var allRooms = await ApiClient.GetRoomsAsync();
        availableRooms = allRooms.Where(r => r.RoomStatus == 0).ToList(); // Only available rooms

        newCheckIn = new CreateCheckInDto
        {
            CheckInDate = DateTime.Today,
            CheckOutDate = DateTime.Today.AddDays(2),
            Guests = new List<CreateGuestDto> { new CreateGuestDto() }
        };
        showCreateModal = true;
    }

    private void HideCreateModal()
    {
        showCreateModal = false;
    }

    private void AddGuest()
    {
        if (newCheckIn.Guests.Count < 3)
        {
            newCheckIn.Guests.Add(new CreateGuestDto());
        }
    }

    private void RemoveGuest(int index)
    {
        if (newCheckIn.Guests.Count > 1)
        {
            newCheckIn.Guests.RemoveAt(index);
        }
    }

    private async Task CreateCheckIn()
    {
        var result = await ApiClient.CreateCheckInAsync(newCheckIn);
        if (result != null)
        {
            await LoadCheckIns();
            HideCreateModal();
        }
    }

    private async Task CheckOut(int id)
    {
        if (await ApiClient.CheckOutAsync(id))
        {
            await LoadCheckIns();
        }
    }

    private async Task ManageGuests(int checkInId)
    {
        selectedCheckIn = checkIns.FirstOrDefault(c => c.Id == checkInId);
        if (selectedCheckIn == null) return;

        loadingGuests = true;
        showGuestsModal = true;

        managedGuests = await ApiClient.GetGuestsByCheckInIdAsync(checkInId);
        loadingGuests = false;

        ocrSuccessGuests.Clear();
        uploadingGuests.Clear();
        processingOcrGuests.Clear();
    }

    private void HideGuestsModal()
    {
        showGuestsModal = false;
        selectedCheckIn = null;
        managedGuests.Clear();
    }

    private async Task HandlePhotoUpload(InputFileChangeEventArgs e, int guestId, int photoNumber)
    {
        uploadingGuests.Add(guestId);
        StateHasChanged();

        try
        {
            var file = e.File;
            if (file.Size > 10 * 1024 * 1024) // 10MB limit
            {
                return;
            }

            using var stream = file.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);
            using var memoryStream = new MemoryStream();
            await stream.CopyToAsync(memoryStream);
            memoryStream.Position = 0;

            var result = await ApiClient.UploadGuestPhotoAsync(guestId, photoNumber, memoryStream, file.Name);

            if (result != null)
            {
                // Update the guest in the list
                var guestIndex = managedGuests.FindIndex(g => g.Id == guestId);
                if (guestIndex >= 0)
                {
                    managedGuests[guestIndex] = result;
                }
            }
        }
        finally
        {
            uploadingGuests.Remove(guestId);
            StateHasChanged();
        }
    }

    private async Task ProcessOcr(GuestDto guest, int photoNumber)
    {
        processingOcrGuests.Add(guest.Id);
        ocrSuccessGuests.Remove(guest.Id);
        StateHasChanged();

        try
        {
            var ocrResult = await ApiClient.ProcessOcrAsync(guest.Id, photoNumber);

            if (ocrResult != null)
            {
                // Auto-fill guest information from OCR
                guest.GuestName = ocrResult.GuestName ?? guest.GuestName;
                guest.Address = ocrResult.Address ?? guest.Address;
                guest.City = ocrResult.City ?? guest.City;
                guest.State = ocrResult.State ?? guest.State;
                guest.Country = ocrResult.Country ?? guest.Country;
                guest.MobileNo = ocrResult.MobileNo ?? guest.MobileNo;
                guest.PanOrAadharNo = ocrResult.IdNumber ?? guest.PanOrAadharNo;

                ocrSuccessGuests.Add(guest.Id);
            }
        }
        finally
        {
            processingOcrGuests.Remove(guest.Id);
            StateHasChanged();
        }
    }

    private async Task UpdateGuest(GuestDto guest)
    {
        var updateDto = new CreateGuestDto
        {
            GuestName = guest.GuestName,
            Address = guest.Address,
            City = guest.City,
            State = guest.State,
            Country = guest.Country,
            MobileNo = guest.MobileNo,
            PanOrAadharNo = guest.PanOrAadharNo
        };

        var result = await ApiClient.UpdateGuestAsync(guest.Id, updateDto);
        if (result != null)
        {
            // Update successful
            var guestIndex = managedGuests.FindIndex(g => g.Id == guest.Id);
            if (guestIndex >= 0)
            {
                managedGuests[guestIndex] = result;
            }
        }
    }
}
